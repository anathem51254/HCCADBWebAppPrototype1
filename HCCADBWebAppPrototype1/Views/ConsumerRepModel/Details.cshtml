    <dl class="dl-horizontal">
        <dd>
            <table class="table">
                <tr>
                    <th>Committee Name</th>
                    <th>Endorsement Date</th>
                    <th>Endorsement Type</th>
                    <th>Endorsement Status</th>
                    <th>Meeting Time</th>
                    <th>Prep Time</th>
                </tr>
