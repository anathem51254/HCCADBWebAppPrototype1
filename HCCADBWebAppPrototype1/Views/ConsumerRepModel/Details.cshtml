            </table>
        </dd>

    </dl>
    <h4>Interests</h4>

    <dl class="dl-horizontal">
        <dd>
            <table class="table">
                @foreach (var item in Model.ConsumerRepAreasOfInterestModels)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AreaOfInterestName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ConsumerRepAreaOfInterestModelID }) |
