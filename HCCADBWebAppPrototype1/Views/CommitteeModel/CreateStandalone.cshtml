@model HCCADBWebAppPrototype1.Models.CommitteeModel
@using HCCADBWebAppPrototype1.Extensions

@{
    ViewBag.Title = "Create Standalone Committee";
}

<h2>Create Standalone Committee</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Committee</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CommitteeName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CommitteeName)
                @Html.ValidationMessageFor(model => model.CommitteeName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CurrentStatus, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.CurrentStatus)
                @Html.ValidationMessageFor(model => model.CurrentStatus)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
